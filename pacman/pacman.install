# Some colored makepkg-like functions
#!/bin/bash
# tputcolors

post_upgrade() {
    echo -e '\e[1;34m WARNING! If you are updating pacman from any version prior:'
    echo -e '\e[1;34m ==> pacman 5.0.0'
    echo -e '\e[1;34m Then the pacman database format has changed' 
    echo -e '\e[1;34m Make sure to update the database with:'
    echo -e '\e[1;34m ==> sudo pacman-db-upgrade \e[0m'
}

